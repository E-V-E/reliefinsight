 <div id='main' data-role='page' data-theme='c'>
                <div data-role='header' data-theme="a">
                    <h1>Relief Insight Mobile Marketplace</h1>
                </div><!--header-->

<p id='notice'>
  <%= notice %>
</p>  

<div class="container">
  <div class="row">
      <div class="col-lg-6">
        <div id='donors'>
          <%= render 'shared/donors', product: @product %>
        </div>
      </div>
      <div class="col-lg-6">
        <div id='requester'>
          <%= render 'shared/requester', product: @product %>

            <div class="progress">
              <%- percent = @product.percent%>
              <div class="progress-bar" role="progressbar" aria-valuenow=<%=percent%> aria-valuemin="0" aria-valuemax="100" style='<%="width: #{percent}%"%>'>
                <span class="sr-only"><%=percent%>% Complete</span>
              </div>
            </div>

            <span>Requested items <%=percent%> satisfied</span>

        </div>
     </div>
  </div><!--row-->
</div><!--container-->

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p>
        <strong>
          Product:
        </strong>  
        <%= @product.name %>
      </p>

     <!-- 

        <strong> Needed Amount:</strong>
        <%= @product.sum_needed_amount %>
      </p>

      <p>
        <strong> Current Amount:</strong>
        <%= @product.sum_current_amount %>
      </p>


      <%= link_to 'Edit', edit_product_path(@product) %>
  | <%= link_to 'Back', products_path %>

   -->
    </div>
  </div><!--row-->
</div><!--container-->


</div><!--page-->
  

